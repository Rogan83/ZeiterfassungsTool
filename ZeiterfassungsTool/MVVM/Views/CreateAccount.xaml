<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeiterfassungsTool.MVVM.Views.CreateAccount"
             Title="">
    <Grid RowDefinitions="auto,auto,auto,auto,auto,*">
        <VerticalStackLayout 
            Spacing="10"
            Padding="20">
            <Label Grid.Row="0" Text ="{Binding Info}"
                   FontSize="Medium"
                   HorizontalTextAlignment="Center"/>
            <VerticalStackLayout x:Name="vslRegister" >
                <Label Grid.Row="1" Text ="{Binding DebugMessage}" TextColor="red"/>
                <Entry Grid.Row="2" Text="{Binding Username}" IsPassword="false" Placeholder="Benutzername hier eingeben"/>
                <Entry Grid.Row="3" Text ="{Binding Password}"  IsPassword="True" Placeholder="Passwort"/>
                <Button x:Name="btnSave" Grid.Row="4" Command="{Binding ToRegister}" CommandParameter="{Binding Source={x:Reference vslRegister}}" Text="Speichern"/>
                <Button x:Name="btnBackToMenu" Grid.Row="2" Text="ZurÃ¼ck zum Login" IsVisible="false" BackgroundColor="CadetBlue" Command="{Binding BackToMainMenu}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>