    <Grid x:Name="grid" RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,*"
          BackgroundColor="{StaticResource BGColor1}"
          >
        
        
        <Button
            Grid.Row="0"
            Margin="10"
            Text="zur Arbeitszeiten Ansicht "
            Command="{Binding GoToUserListView}"
            />
        <Button
            x:Name="btnShowAllAccounts"
            Grid.Row="1"
            Margin="10"
            Text="zur Listenansicht von allen Accounts"
            Command="{Binding GoToAccountsListView}"
            />
        <Button
            Grid.Row="2"
            Margin="10"
            Text="zur Ãœberstundenansicht"
            Command="{Binding GoToOvertimeView}"
            />
        <Button
            Grid.Row="3"
            Margin="10"
            Text="zur Kalenderansicht"
            Command="{Binding GoToScheduler}"
            />

        <Button
            Grid.Row="4"
            Margin="20,40,20,0"
            Text="Datenbank in CSV Dateien speichern"
            Command="{Binding SaveDatabaseInCSVFile}"
            />

        <Button
            Grid.Row="5"
            Margin="20"
            Text="Datenbank aus CSV Dateien wiederherstellen"
            Command="{Binding LoadDatabaseFromCSVFile}"
            CommandParameter="{Binding Source={x:Reference grid}}"
            />
        <core:SfBusyIndicator Grid.Row="6" x:Name="busy" IsRunning="false"  IsVisible="true" Title="Daten werden in die Datenbank gespeichert..." SizeFactor="0.7" HeightRequest="200"></core:SfBusyIndicator >
        
    </Grid>

</ContentPage>