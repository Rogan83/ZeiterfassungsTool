             xmlns:Datatemplates="clr-namespace:ZeiterfassungsTool.Selectors"
             x:Class="ZeiterfassungsTool.MVVM.Views.Admin.AdminPageUserManagement"
             Title="AdminPageUserManagement">

    <ContentPage.Resources>
        <Datatemplates:EmployeeDataTemplateSelector x:Key="EmployeeTemplates"/>
    </ContentPage.Resources>
    
    
    <Grid 
            RowDefinitions="*,auto,auto,auto,auto,auto,auto,auto, auto"
            ColumnDefinitions="*,*,*,*"
            >
        <!--Um die optischen Sachen werde ich mich sp채ter k체mmern: URL dazu: https://learn.microsoft.com/de-de/dotnet/maui/user-interface/visual-states?view=net-maui-7.0-->
